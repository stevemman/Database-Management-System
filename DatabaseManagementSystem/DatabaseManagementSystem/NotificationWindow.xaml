<Window x:Class="DatabaseManagementSystem.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseManagementSystem"
        mc:Ignorable="d"
        Title="Notification" Height="132" Width="319" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Margin="1,0,-1,0">
        <Button x:Name="button_DismissNotification" Content="OK" HorizontalAlignment="Left" Margin="120,60,0,0" VerticalAlignment="Top" Width="75" Click="button_DismissNotification_Click"/>
        <TextBlock x:Name="theMessage" HorizontalAlignment="Left" Height="35" Margin="40,15,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="230" TextAlignment="Center"/>

    </Grid>
</Window>
